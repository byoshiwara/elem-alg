<exercise number="39"><statement><p><ol marker="a." cols="2">	
	<li><m>\dfrac{p}{q+2} + \dfrac{r-1}{q+2}</m></li>
	<li><m>\dfrac{p}{q+2} - \dfrac{r-1}{q+2}</m></li>
	<li><m>\dfrac{p}{q+2} \cdot \dfrac{r-1}{q+2}</m></li>
	<li><m>\dfrac{p}{q+2} \div \dfrac{r-1}{q+2}</m></li></ol></p></statement>
<answer><p><ol marker="a." cols="2">
    <li><m>\dfrac{p+r-1}{q+2}</m></li>
    <li><m>\dfrac{p-r+1}{q+2}</m></li>
    <li><m>\dfrac{p(r-1)}{(q+2)^2}</m></li>
    <li><m>\dfrac{p}{r-1}</m></li></ol></p></answer></exercise>

